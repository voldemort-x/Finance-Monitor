{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      }
    ],
    "routes": [
      {
        "source": "/api/(.*)",
        "destination": "app.py"
      },
      {
        "source": "/script.js",
        "destination": "/script.js"
      },
      {
        "source": "/style.css",
        "destination": "/style.css"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }